div(ng-controller="headerController as headerCtrl")
      

div(id="header" ng-controller="headerController as headerCtrl")
    div(id="header-content")
        div.container
          .container-fluid.visible-xs
              // Brand and toggle get grouped for better mobile display
              .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                  span.sr-only Toggle navigation
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
              // Collect the nav links, forms, and other content for toggling
              #bs-example-navbar-collapse-1.collapse.navbar-collapse
                ul.nav.navbar-nav
                  li(ng-repeat="tab in tabs")
                    a(ng-href="#{{tab.url}}") {{tab.name}}
        div.container
            div(id="header-image")
                img(src="app/images/logo.png" id="logo-image")
            div(class="container")
                ul.tabs-container.hidden-xs
                    li(ng-repeat="tab in tabs" class="tab")
                        div
                            a(ng-href="#{{tab.url}}")
                                img(ng-src="app/images/{{tab.imgUrl}}")
                                br
                                span(ng-bind="tab.name")